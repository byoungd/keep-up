{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@keepup/agent-runtime": ["packages/agent-runtime/src/index.ts"],
      "@keepup/agent-runtime/*": ["packages/agent-runtime/src/*"],
      "@keepup/ai-core": ["packages/ai-core/src/index.ts"],
      "@keepup/ai-core/*": ["packages/ai-core/src/*"],
      "@keepup/app": ["packages/app/src/index.ts"],
      "@keepup/app/*": ["packages/app/src/*"],
      "@keepup/bench": ["packages/bench/src/index.ts"],
      "@keepup/bench/*": ["packages/bench/src/*"],
      "@keepup/collab-server-lib": ["packages/collab-server/src/index.ts"],
      "@keepup/collab-server-lib/*": ["packages/collab-server/src/*"],
      "@keepup/compat": ["packages/compat/src/index.ts"],
      "@keepup/compat/*": ["packages/compat/src/*"],
      "@keepup/conformance-kit": ["packages/conformance-kit/src/index.ts"],
      "@keepup/conformance-kit/*": ["packages/conformance-kit/src/*"],
      "@keepup/core": ["packages/core/src/index.ts"],
      "@keepup/core/*": ["packages/core/src/*"],
      "@keepup/crypto": ["packages/crypto/src/index.ts"],
      "@keepup/crypto/*": ["packages/crypto/src/*"],
      "@keepup/db": ["packages/db/src/index.ts"],
      "@keepup/db/*": ["packages/db/src/*"],
      "@packages/ingest-file": ["packages/ingest/file/src/index.ts"],
      "@packages/ingest-file/*": ["packages/ingest/file/src/*"],
      "@packages/ingest-rss": ["packages/ingest/rss/src/index.ts"],
      "@packages/ingest-rss/*": ["packages/ingest/rss/src/*"],
      "@packages/ingest-youtube": ["packages/ingest-youtube/src/index.ts"],
      "@packages/ingest-youtube/*": ["packages/ingest-youtube/src/*"],
      "@keepup/lfcc-bridge": ["packages/lfcc-bridge/src/index.ts"],
      "@keepup/lfcc-bridge/*": ["packages/lfcc-bridge/src/*"],
      "@keepup/overlay": ["packages/overlay/src/index.ts"],
      "@keepup/overlay/*": ["packages/overlay/src/*"],
      "@keepup/shared": ["packages/shared/src/index.ts"],
      "@keepup/shared/*": ["packages/shared/src/*"],
      "@keepup/token": ["packages/token/src/index.ts"],
      "@keepup/token/*": ["packages/token/src/*"],
      "@keepup/translator": ["packages/translator/src/index.ts"],
      "@keepup/translator/*": ["packages/translator/src/*"],
      "@keepup/tts": ["packages/tts/src/index.ts"],
      "@keepup/tts/*": ["packages/tts/src/*"]
    },
    "declaration": true,
    "declarationMap": true
  }
}
