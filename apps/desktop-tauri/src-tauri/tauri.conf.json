{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "KeepUp",
  "version": "0.1.0",
  "identifier": "com.keepup.desktop",
  "build": {
    "beforeDevCommand": "pnpm -C ../cowork dev",
    "devUrl": "http://localhost:5177",
    "beforeBuildCommand": "pnpm -w turbo run build --filter @ku0/cowork",
    "frontendDist": "../../cowork/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "KeepUp",
        "width": 1280,
        "height": 800,
        "minWidth": 960,
        "minHeight": 640
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "macOS": {
      "infoPlist": "Info.plist"
    },
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
