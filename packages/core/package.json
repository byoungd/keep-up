{
  "name": "@ku0/core",
  "version": "0.0.0",
  "description": "LFCC v0.9 RC core kernel",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    },
    "./sync": {
      "types": "./src/sync/index.ts",
      "default": "./dist/sync/index.js"
    },
    "./sync/server": {
      "types": "./src/sync/server.ts",
      "default": "./dist/sync/server.js"
    },
    "./security": {
      "types": "./src/security/index.ts",
      "import": "./dist/security/index.js",
      "default": "./dist/security/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "!dist/**/__tests__/**"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsc",
    "dev": "tsc -w",
    "prepack": "pnpm run build",
    "test": "pnpm -C ../.. exec vitest run packages/core/src",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write ."
  },
  "devDependencies": {
    "@ku0/native-bindings": "workspace:*",
    "fast-check": "^4.5.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@iarna/toml": "^2.2.5",
    "@ku0/ai-context-hash-rs": "workspace:*",
    "@ku0/anchor-codec-rs": "workspace:*",
    "@ku0/anchor-relocation-rs": "workspace:*",
    "@ku0/policy-hash-rs": "workspace:*",
    "@ku0/ai-sanitizer-rs": "workspace:*",
    "@ku0/canonicalizer-rs": "workspace:*",
    "@ku0/markdown-content-rs": "workspace:*",
    "@ku0/text-normalization-rs": "workspace:*",
    "yaml": "^2.4.5",
    "zod": "^4.3.5"
  }
}
