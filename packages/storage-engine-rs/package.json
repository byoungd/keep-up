{
  "name": "@ku0/storage-engine-rs",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "Rust-backed storage engine bindings",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "pnpm run build:rs && tsc",
    "build:rs": "tsx scripts/build-native.ts --release",
    "build:debug": "tsx scripts/build-native.ts",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write ."
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "typescript": "^5.7.3"
  }
}
