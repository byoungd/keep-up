{
  "name": "@ku0/gateway-control",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "Gateway control-plane WS multiplexing for runtime events + sync",
  "main": "./dist/index.js",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome check .",
    "lint:fix": "biome check --write ."
  },
  "dependencies": {
    "@ku0/agent-runtime-control": "workspace:*",
    "@ku0/agent-runtime-telemetry": "workspace:*",
    "@ku0/core": "workspace:*",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "@types/ws": "^8.18.1",
    "typescript": "^5.7.3",
    "vitest": "^4.0.0"
  }
}
