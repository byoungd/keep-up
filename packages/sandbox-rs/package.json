{
  "name": "@ku0/sandbox-rs",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "Rust sandbox sidecar bindings",
  "main": "./dist/index.js",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "*.node"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsc",
    "build:native": "cargo build --release && cp target/release/libsandbox_rs.dylib sandbox_rs.node 2>/dev/null || cp target/release/sandbox_rs.dll sandbox_rs.node 2>/dev/null || cp target/release/libsandbox_rs.so sandbox_rs.node 2>/dev/null || true",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write ."
  },
  "dependencies": {
    "@ku0/agent-runtime-core": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "typescript": "^5.7.3"
  },
  "napi": {
    "name": "sandbox-rs",
    "triples": {
      "defaults": true,
      "additional": [
        "aarch64-apple-darwin"
      ]
    }
  }
}
