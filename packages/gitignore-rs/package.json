{
  "name": "@ku0/gitignore-rs",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "Rust-based gitignore matcher using the ignore crate",
  "main": "./dist/index.js",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "*.node"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsc",
    "build:native": "tsx scripts/build-native.ts --release",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write ."
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "tsx": "^4.21.0",
    "typescript": "^5.7.3"
  },
  "napi": {
    "name": "gitignore-rs",
    "triples": {
      "defaults": true,
      "additional": [
        "aarch64-apple-darwin"
      ]
    }
  }
}
