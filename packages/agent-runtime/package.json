{
  "name": "@ku0/agent-runtime",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "Agent Runtime with MCP tools, bash execution, and orchestration",
  "main": "./dist/index.js",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    },
    "./tools": {
      "types": "./src/tools/index.ts",
      "default": "./dist/tools/index.js"
    },
    "./orchestrator": {
      "types": "./src/orchestrator/index.ts",
      "default": "./dist/orchestrator/index.js"
    },
    "./orchestrator/edge": {
      "types": "./src/orchestrator/edge.ts",
      "default": "./dist/orchestrator/edge.js"
    },
    "./security": {
      "types": "./src/security/index.ts",
      "default": "./dist/security/index.js"
    },
    "./types": {
      "types": "./src/types/index.ts",
      "default": "./dist/types/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome check .",
    "lint:fix": "biome check --write ."
  },
  "dependencies": {
    "@ku0/agent-runtime-core": "workspace:*",
    "@ku0/agent-runtime-control": "workspace:*",
    "@ku0/agent-runtime-execution": "workspace:*",
    "@ku0/agent-runtime-memory": "workspace:*",
    "@ku0/agent-runtime-persistence": "workspace:*",
    "@ku0/agent-runtime-telemetry": "workspace:*",
    "@ku0/agent-runtime-tools": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "typescript": "^5.7.3",
    "vitest": "^4.0.0"
  }
}
