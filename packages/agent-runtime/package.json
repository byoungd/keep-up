{
  "name": "@ku0/agent-runtime",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "Agent Runtime with MCP tools, bash execution, and orchestration",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./tools": {
      "types": "./dist/tools/index.d.ts",
      "default": "./dist/tools/index.js"
    },
    "./orchestrator": {
      "types": "./dist/orchestrator/index.d.ts",
      "default": "./dist/orchestrator/index.js"
    },
    "./orchestrator/edge": {
      "types": "./dist/orchestrator/edge.d.ts",
      "default": "./dist/orchestrator/edge.js"
    },
    "./security": {
      "types": "./dist/security/index.d.ts",
      "default": "./dist/security/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "default": "./dist/types/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome check .",
    "lint:fix": "biome check --write ."
  },
  "dependencies": {
    "@ku0/ai-core": "workspace:*",
    "@ku0/core": "workspace:*",
    "@ku0/db": "workspace:*",
    "@ku0/tool-lsp": "workspace:*",
    "@openai/agents": "^0.3.9",
    "chokidar": "^5.0.0",
    "gray-matter": "^4.0.3",
    "mem0ai": "^2.2.1",
    "pino": "^10.2.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "typescript": "^5.7.3",
    "vitest": "^4.0.0"
  }
}
