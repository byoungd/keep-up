{
  "name": "@ku0/agent-runtime-persistence",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "Checkpoint persistence and time-travel utilities",
  "main": "./dist/index.js",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    },
    "./node": {
      "types": "./src/node.ts",
      "default": "./dist/node.js"
    },
    "./checkpoint": {
      "types": "./src/checkpoint/index.ts",
      "default": "./dist/checkpoint/index.js"
    },
    "./execution": {
      "types": "./src/execution/index.ts",
      "default": "./dist/execution/index.js"
    },
    "./artifacts": {
      "types": "./src/artifacts/index.ts",
      "default": "./dist/artifacts/index.js"
    },
    "./timetravel": {
      "types": "./src/timetravel/index.ts",
      "default": "./dist/timetravel/index.js"
    }
  },
  "files": [
    "dist",
    "*.node"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsc && tsx scripts/build-native.ts --release",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "biome check .",
    "lint:fix": "biome check --write ."
  },
  "dependencies": {
    "@ku0/agent-runtime-control": "workspace:*",
    "@ku0/agent-runtime-core": "workspace:*",
    "@ku0/core": "workspace:*",
    "@ku0/native-bindings": "workspace:*",
    "@ku0/storage-engine-rs": "workspace:*",
    "@ku0/tokenizer-rs": "workspace:*",
    "@msgpack/msgpack": "^3.1.3",
    "zod": "^4.3.5",
    "better-sqlite3": "^9.6.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.2",
    "tsx": "^4.21.0",
    "typescript": "^5.7.3",
    "vitest": "^4.0.0"
  }
}
