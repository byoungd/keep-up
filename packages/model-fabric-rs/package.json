{
  "name": "@ku0/model-fabric-rs",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "description": "Rust model fabric bindings",
  "main": "./dist/index.js",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "browser": "./src/browser.ts",
      "default": "./dist/index.js"
    },
    "./node": {
      "types": "./src/node.ts",
      "node": "./dist/node.js",
      "default": "./dist/node.js"
    }
  },
  "files": [
    "dist",
    "*.node"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "pnpm run build:rs && tsc",
    "build:rs": "tsx scripts/build-native.ts --release",
    "build:debug": "tsx scripts/build-native.ts",
    "typecheck": "tsc --noEmit",
    "lint": "biome check .",
    "lint:fix": "biome check --write ."
  },
  "dependencies": {
    "@ku0/agent-runtime-core": "workspace:*",
    "@ku0/native-bindings": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.10.2",
    "tsx": "^4.21.0",
    "typescript": "^5.7.3"
  }
}
