{
  "name": "keep-up",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.28.0",
  "scripts": {
    "dev": "concurrently -k -n cowork,cowork-server -c blue,green \"pnpm dev:cowork\" \"pnpm -C apps/cowork/server dev\"",
    "dev:cowork": "turbo run dev --filter=@ku0/cowork",
    "dev:desktop": "concurrently -k -n cowork-server,tauri -c green,yellow \"pnpm -C apps/cowork/server dev\" \"pnpm --filter @ku0/desktop-tauri tauri dev\"",
    "tauri:dev": "pnpm --filter @ku0/desktop-tauri tauri dev",
    "tauri:build": "pnpm --filter @ku0/desktop-tauri tauri build",
    "cowork:serve": "pnpm -C apps/cowork build && pnpm -C apps/cowork/server start",
    "build": "turbo run build",
    "test": "pnpm test:unit",
    "test:unit": "vitest run",
    "test:unit:ci": "vitest run --coverage",
    "test:watch": "vitest",
    "test:x1": "pnpm --filter @ku0/agent-runtime-execution test -- --grep \"X-AC-1\"",
    "test:x2": "pnpm --filter @ku0/agent-runtime-execution test -- --grep \"X-AC-2\"",
    "test:x3": "pnpm --filter @ku0/agent-runtime-execution test -- --grep \"X-AC-3\"",
    "test:x4": "pnpm --filter @ku0/agent-runtime-execution test -- --grep \"X-AC-4\"",
    "test:y1": "pnpm --filter @ku0/agent-runtime-execution test -- --grep \"Y-AC-1\"",
    "test:y2": "pnpm --filter @ku0/agent-runtime-execution test -- --grep \"Y-AC-2\"",
    "test:y3": "pnpm --filter @ku0/agent-runtime-execution test -- --grep \"Y-AC-3\"",
    "test:y4": "pnpm --filter @ku0/agent-runtime-execution test -- --grep \"Y-AC-4\"",
    "test:z1": "pnpm --filter @ku0/agent-gym test -- --grep \"Z-AC-1\"",
    "test:z2": "pnpm --filter @ku0/agent-gym test -- --grep \"Z-AC-2\"",
    "test:q3": "pnpm test:x1 && pnpm test:x2 && pnpm test:x3 && pnpm test:x4 && pnpm test:y1 && pnpm test:y2 && pnpm test:y3 && pnpm test:y4 && pnpm test:z1 && pnpm test:z2",
    "test:e2e": "pnpm --filter @ku0/e2e-tests test:e2e",
    "test:e2e:smoke": "pnpm --filter @ku0/e2e-tests test:e2e -- src/sidebar.spec.ts",
    "test:pr": "pnpm test:unit",
    "test:ci": "pnpm test:unit:ci",
    "test:nightly": "pnpm test:unit:ci",
    "perf:gate": "node scripts/perf-gate.mjs --baseline artifacts/perf-baseline.json --metrics artifacts/perf-metrics.json",
    "perf:baseline": "node scripts/lfcc-perf-baseline.mjs",
    "bench:cache": "tsx packages/agent-runtime/bench/cache.bench.ts",
    "lint": "turbo run lint && biome check .",
    "lint:fix": "biome check --write .",
    "docs:normative-index": "node scripts/update-normative-index.mjs",
    "ui:contract": "bash scripts/check-ui-contract.sh",
    "check:circular": "bash scripts/check-circular-deps.sh",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "typecheck": "turbo run typecheck",
    "prepare": "husky",
    "release": "turbo run build && changeset publish"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.11",
    "@changesets/cli": "^2.29.8",
    "@types/node": "^20.12.12",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitest/coverage-v8": "^4.0.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.14.0",
    "fast-check": "^4.5.3",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "lru-cache": "^11.2.4",
    "madge": "^8.0.0",
    "tsx": "^4.21.0",
    "turbo": "^2.3.3",
    "typescript": "^5.7.3",
    "typescript-language-server": "^5.1.3",
    "vitest": "^4.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "@sentry/cli",
      "better-sqlite3",
      "sharp"
    ]
  }
}
