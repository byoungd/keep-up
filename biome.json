{
  "$schema": "https://biomejs.dev/schemas/2.3.11/schema.json",
  "assist": {
    "enabled": true,
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noAriaHiddenOnFocusable": "error",
        "useAltText": "error",
        "useButtonType": "error",
        "useKeyWithClickEvents": "error",
        "useSemanticElements": "warn",
        "useValidAriaRole": "error"
      },
      "complexity": {
        "noExcessiveCognitiveComplexity": {
          "level": "error",
          "options": { "maxAllowedComplexity": 15 }
        },
        "noEmptyTypeParameters": "error",
        "useSimpleNumberKeys": "error",
        "noUselessFragments": "error"
      },
      "correctness": {
        "noUnusedImports": "error",
        "noUnusedVariables": "error",
        "useExhaustiveDependencies": "warn",
        "noEmptyPattern": "error"
      },
      "style": {
        "noNonNullAssertion": "error",
        "useConst": "error",
        "useImportType": "error",
        "useTemplate": "error",
        "useBlockStatements": "warn",
        "noUselessElse": "error"
      },
      "suspicious": {
        "noExplicitAny": "error",
        "noArrayIndexKey": "error",
        "noConsole": "warn",
        "noEmptyBlockStatements": "error",
        "noConfusingVoidType": "error"
      },
      "security": {
        "noBlankTarget": "error"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "semicolons": "always",
      "trailingCommas": "es5"
    }
  },
  "json": {
    "formatter": {
      "indentWidth": 2,
      "trailingCommas": "none"
    }
  },
  "css": {
    "parser": {
      "cssModules": true,
      "tailwindDirectives": true
    },
    "formatter": {
      "quoteStyle": "double"
    }
  },
  "files": {
    "includes": [
      "**",
      "!node_modules",
      "!.next",
      "!.turbo",
      "!**/dist",
      "!**/*.d.ts",
      "!**/*.d.ts.map",
      "!packages/app/src/**/*.js",
      "!packages/lfcc-bridge/src/**/*.js",
      "!packages/overlay/src/**/*.js",
      "!coverage",
      "!*.min.js",
      "!pnpm-lock.yaml",
      "!pnpm-lock.yaml",
      "!packages/mdvp-wasm/pkg"
    ]
  },
  "overrides": [
    {
      "includes": ["apps/reader/src/components/layout/ModelSelector.tsx"],
      "linter": {
        "rules": {
          "complexity": {
            "noExcessiveCognitiveComplexity": {
              "level": "error",
              "options": { "maxAllowedComplexity": 22 }
            }
          }
        }
      }
    },
    {
      "includes": ["e2e/**/*.ts", "e2e/**/*.spec.ts"],
      "linter": {
        "rules": {
          "complexity": {
            "noExcessiveCognitiveComplexity": {
              "level": "error",
              "options": { "maxAllowedComplexity": 50 }
            }
          },
          "style": {
            "useBlockStatements": "off"
          }
        }
      }
    },
    {
      "includes": [
        "scripts/**",
        "**/*.mjs",
        "packages/bench/src/runner.ts",
        "packages/conformance-kit/**/runner.ts",
        "packages/conformance-kit/src/cli/replay.ts",
        "packages/conformance-kit/src/cli/run.ts",
        "packages/conformance-kit/src/double-blind/harness.ts"
      ],
      "linter": {
        "rules": {
          "suspicious": {
            "noConsole": "off"
          }
        }
      }
    }
  ],
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
